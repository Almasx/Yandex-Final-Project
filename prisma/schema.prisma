// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Offer {
  id         Int      @id @default(autoincrement())
  clientName String
  email      String
  message    String
  createdAt  DateTime @default(now())
}

model Project {
  id   Int    @id @default(autoincrement())
  tech Tech[]
}

model Tech {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  projects Project[]
}
